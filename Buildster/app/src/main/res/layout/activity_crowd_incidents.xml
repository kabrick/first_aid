<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
tools:context="com.kabricks.firstaidapp.PrepFragmentFiles.CrowdIncidents"
    android:background="@color/mediumGreen">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CROWD INCIDENTS"
        android:id="@+id/textView116"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="There are many places you could find yourself in a crowd - from music festivals to large events and demonstrations. Crowd incdents are triggeredd  by many different factors. Make sure you are prepared."
        android:id="@+id/textView126"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BEFORE CHECKLIST"
        android:id="@+id/textView127"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/ColorPrimary"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you are out in a group, ask if anyone doesn&apos;t like crowded situations before exposing them to one. "
        android:id="@+id/checkBox43"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On arriving at a new venue, look out for emergency exits."
        android:id="@+id/checkBox44"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrange a meeting place with friends and family, and then wait there if you get separated."
        android:id="@+id/checkBox45"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak to a steward or staff members at crowded venues if you need help."
        android:id="@+id/checkBox46"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Done"
        android:id="@+id/button10"
        android:layout_gravity="right"
        android:background="@drawable/buttons"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DURING"
        android:id="@+id/textView128"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/ColorPrimary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Keep an eye on friends and family to make sure they are okay."
        android:id="@+id/textView129"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Listen out for announcements over tannoy systems."
        android:id="@+id/textView130"
        android:layout_marginBottom="8dp"/>

</LinearLayout>

</ScrollView>