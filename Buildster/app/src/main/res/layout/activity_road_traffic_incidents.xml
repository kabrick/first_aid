<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
    tools:context="com.kabricks.firstaidapp.PrepFragmentFiles.RoadTrafficIncidents"
    android:background="@color/mediumGreen">

<LinearLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ROAD TRAFFIC INCIDENTS"
        android:id="@+id/textView89"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Most of us experinece a car breakdown or witness a traffic incident at some point. When you do, it&apos;s important to know hw to stay safe"
        android:id="@+id/textView90"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BEFORE CHECKLIST"
        android:id="@+id/textView91"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FF88"
        android:layout_marginBottom="8dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service your car regularly."
        android:id="@+id/checkBox29"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Know the correct tyre pressures for different speeds and loads and adjust accordingly."
        android:id="@+id/checkBox36"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consider carrying a spare tyre, warning triangles and a high-visibility vest or jacket"
        android:id="@+id/checkBox37"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure you have enough fuel for your journey"
        android:id="@+id/checkBox38"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Done"
        android:id="@+id/button8"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:onClick="allDone"
        android:background="@drawable/buttons"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DURING"
        android:id="@+id/textView92"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FF88"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Leave your sidelights on and use your hazard flashers"
        android:id="@+id/textView93"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Make sure people stay away from dangers such as unstable vehicles and traffic"
        android:id="@+id/textView94"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="If there is more than one injured erson at an incident, go to the quitest one first."
        android:id="@+id/textView95" />

</LinearLayout>
</ScrollView>