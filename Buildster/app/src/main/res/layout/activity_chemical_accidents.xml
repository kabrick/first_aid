<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
    tools:context="com.kabricks.firstaidapp.PrepFragmentFiles.ChemicalAccidents"
    android:background="@color/mediumGreen">

<LinearLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHEMICAL EMERGENCIES"
        android:id="@+id/textView77"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Chemical emergencies are a fact of modern life. They range from accidents at home, on the road or in the workplace to terrorist attacks. we all need to know the basics of what to do."
        android:id="@+id/textView78"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BEFORE CHECKLIST"
        android:id="@+id/textView79"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="#FF88"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep chemicals, including medicines and cleaning agents, out of sight and reach of children."
        android:id="@+id/checkBox8"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Never decant cleaning agents or household chemicals into soft-drink bottles. Someone may accidentally drink them"
        android:id="@+id/checkBox9"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Never mix products as some combinations, such as ammonia and bleach, can create toxic gases."
        android:id="@+id/checkBox10"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Always read the instructions before using a new product."
        android:id="@+id/checkBox11"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean up chemical spills immediately with rags, while protecting your eyes and skin. Allow the fumes in the rags to evaporate outdoors in a safe place. Wrap them up in a newspaper and dispose of them in a sealed lstic bag."
        android:id="@+id/checkBox12"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure your first aid kit is complete and accessible"
        android:id="@+id/checkBox13"
        android:checked="false"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Done"
        android:id="@+id/button5"
        android:layout_marginBottom="16dp"
        android:layout_gravity="end"
        android:onClick="allDone"
        android:background="@drawable/buttons"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="During"
        android:id="@+id/textView80"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="#FF88"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Don&apos;t give anything by mouth unless advised by medical professionals."
        android:id="@+id/textView81"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Move away from the immediate source of any chemical danger"
        android:id="@+id/textView82"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Keep the label of the chemical with you for easier diagnosis."
        android:id="@+id/textView83"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
</ScrollView>
