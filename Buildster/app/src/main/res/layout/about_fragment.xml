<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
    android:background="@color/mediumGreen">
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COPYRIGHT"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textColor="@color/limeGreen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/copyright_about"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="@color/tabsScrollColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CREDITS"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textColor="@color/limeGreen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DEVELOPERS: KABUYE DOUGLAS HOSEA AND KWOBA YAZIDI"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@color/tabsScrollColor"/>

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/textView4"
         android:layout_toEndOf="@+id/textView3"
         android:layout_marginTop="34dp"
         android:layout_alignParentStart="true">

         <Button
             android:layout_width="285dp"
             android:layout_height="wrap_content"
             android:text="CONTACT US FOR INQUIRIES"
             android:id="@+id/button"
             android:background="@drawable/buttons"
             android:clickable="true"
             android:layout_marginTop="48dp"
             android:layout_alignStart="@+id/button3"
             android:layout_gravity="center_horizontal" />

         <Button
             android:layout_width="294dp"
             android:layout_height="wrap_content"
             android:text="VISIT OUR WEBSITE FOR MORE CONTENT"
             android:id="@+id/button2"
             android:background="@drawable/buttons"
             android:clickable="true"
             android:layout_marginTop="44dp"
             android:layout_toEndOf="@+id/textView3"
             android:layout_gravity="center"/>

         <Button
             android:layout_width="290dp"
             android:layout_height="wrap_content"
             android:text="DONATE FOR A GOOD CAUSE"
             android:id="@+id/button3"
             android:background="@drawable/buttons"
             android:clickable="true"
             android:layout_marginTop="38dp"
             android:layout_alignParentStart="true"
             android:layout_marginStart="36dp"
             android:layout_marginBottom="16dp"/>

     </LinearLayout>


 </RelativeLayout>
</ScrollView>