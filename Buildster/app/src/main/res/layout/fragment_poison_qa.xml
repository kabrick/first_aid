<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
    android:background="@color/mediumGreen">

 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:padding="30dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView65"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How can i tell if someone has taken poison"
        android:id="@+id/textView66"
        android:layout_below="@+id/textView65"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="They may vomit and have abdominal pain. there may also be empty containers nearby"
        android:id="@+id/textView67"
        android:layout_below="@+id/textView66"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Why shouldn&apos;t i make the person sick?"
        android:id="@+id/textView68"
        android:layout_below="@+id/textView67"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Making them vomit can cause more damage to the throat and block their airway. If thay have swallowed something corrosive, the liquid will burn the throat on the way back, causing more pain."
        android:id="@+id/textView69"
        android:layout_below="@+id/textView68"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What should i do while i wait for the ambulance to arrive?"
        android:id="@+id/textView70"
        android:layout_below="@+id/textView69"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try to reassure the person by talking to them about the situation and making them as comfortable as possible."
        android:id="@+id/textView71"
        android:layout_below="@+id/textView70"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

</ScrollView>