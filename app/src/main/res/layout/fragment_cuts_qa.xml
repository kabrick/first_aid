<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
    android:background="@color/mediumGreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Q&amp;A"
            android:id="@+id/textView37"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What can i use to put pressure on the wound?"
            android:id="@+id/textView38"
            android:layout_below="@+id/textView37"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cuts1"
            android:id="@+id/textView39"
            android:layout_below="@+id/textView38"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Should i wash the wound"
            android:id="@+id/textView40"
            android:layout_below="@+id/textView39"
            android:layout_alignParentStart="true"
            android:layout_marginTop="72dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cuts2"
            android:id="@+id/textView41"
            android:layout_below="@+id/textView40"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What should i do if there is an embedded object in the wound?"
            android:id="@+id/textView42"
            android:layout_below="@+id/textView41"
            android:layout_alignParentStart="true"
            android:layout_marginTop="61dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cuts3"
            android:id="@+id/textView43"
            android:layout_below="@+id/textView42"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</ScrollView>